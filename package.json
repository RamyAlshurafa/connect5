{
  "name": "server",
  "version": "0.0.0",
  "private": true,
  "jest": {
    "testRegex": "__test__/*",
    "coverageDirectory": "./coverage/",
    "collectCoverageFrom": [
      "**/*.js",
      "!**/node_modules/**",
      "!**/__snapshots__/**",
      "!**/client/**",
      "!**/server/app.js",
      "!**/coverage/**"
    ]
  },
  "scripts": {
    "start": "node ./server/bin/www",
    "dev": "nodemon ./server/bin/www",
    "dev:both": "concurrently --kill-others-on-fail \"cd client && npm start\" \"nodemon ./server/bin/www\"",
    "test": "NODE_ENV=test jest --detectOpenHandles --forceExit --runInBand",
    "test:coverage": "NODE_ENV=test  jest --coverage --detectOpenHandles --forceExit --runInBand",
    "test:client": "cd client && npm test",
    "test:client:coverage": "cd client && npm run test:coverage",
    "client:init": "cd client && npm i",
    "client:dev": "cd client && npm start",
    "heroku-postbuild": "npm run client:init && npm run client:build",
    "client:build": "cd client && npm run build",
    "coverage": "codecov",
    "surveybuild": "node server/database/surveyBuild.js",
    "dummybuild": "node server/database/dummy_data_build.js"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.18.3",
    "codecov": "^3.1.0",
    "concurrently": "^4.0.1",
    "cookie-parser": "~1.4.3",
    "debug": "~2.6.9",
    "env2": "^2.2.2",
    "express": "~4.16.0",
    "http-errors": "~1.6.2",
    "jsonwebtoken": "^8.4.0",
    "mongoose": "^5.3.12",
    "morgan": "~1.9.0",
    "passport": "^0.4.0",
    "passport-jwt": "^4.0.0",
    "serve-favicon": "^2.5.0",
    "validator": "^10.9.0"
  },
  "devDependencies": {
    "eslint": "5.6.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jsx-a11y": "^6.1.2",
    "eslint-plugin-react": "^7.11.1",
    "istanbul": "^0.4.5",
    "jest": "^23.6.0",
    "moment": "^2.22.2",
    "nodemon": "^1.18.6",
    "supertest": "^3.3.0"
  }
}
